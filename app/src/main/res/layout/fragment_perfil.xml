<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment"
    android:background="@color/FundoClaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/sobrenome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dataNascimento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/telefone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="682dp"
            android:background="@color/VerdeEscuro"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/homeicon" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:src="@drawable/menuicon" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/personicon" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>