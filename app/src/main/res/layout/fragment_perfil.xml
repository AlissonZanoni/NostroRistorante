<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment"
    android:background="@color/FundoClaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/VerdeEscuro">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perfilTitle"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/imgheader"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <!--ImagePerfil-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/imgtelaperfil"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/VerdeEscuro"
                android:text=""
                android:fontFamily="@font/gabrielaregular"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/dataNascimento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/VerdeEscuro"
                android:text=""
                android:fontFamily="@font/gabrielaregular"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/telefone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/VerdeEscuro"
                android:text=""
                android:fontFamily="@font/gabrielaregular"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/VerdeEscuro"
                android:text=""
                android:fontFamily="@font/gabrielaregular"
                android:layout_gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnDesconectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:background="@drawable/custom_button_login"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/btnDesconectar"
            android:textColor="@color/white"
            android:fontFamily="@font/gabrielaregular"/>

    </LinearLayout>
</FrameLayout>