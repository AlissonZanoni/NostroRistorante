<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarReservaActivity"
    android:orientation="vertical"
    android:background="@color/FundoClaro">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VerdeEscuro"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:textColor="@color/white"
                android:fontFamily="@font/gabrielaregular"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/imgheader"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifique as informações antes de confirmar!"
            android:textAlignment="center"
            android:fontFamily="@font/gabrielaregular"
            android:textColor="@color/VerdeEscuro"
            android:textSize="16dp"/>

        <!--Data da Reserva-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data da reserva:"
                android:textSize="14sp"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/gabrielaregular"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/confirmarDataReserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/VerdeEscuro"
                    android:fontFamily="@font/gabrielaregular"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!--Qtd Pessoas-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de pessoas:"
                android:textSize="14sp"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/gabrielaregular"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/confirmarQtdPessoas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/VerdeEscuro"
                    android:fontFamily="@font/gabrielaregular"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!--Qtd Pessoas-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observações:"
                android:textSize="14sp"
                android:textColor="@color/VerdeEscuro"
                android:fontFamily="@font/gabrielaregular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <TextView
                    android:id="@+id/confirmarObservacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/VerdeEscuro"
                    android:fontFamily="@font/gabrielaregular"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/idBtnConfirmarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_button_login"
            android:text="Confirmar Reserva"
            android:textColor="@color/white"
            android:fontFamily="@font/gabrielaregular"/>
    </LinearLayout>
</ScrollView>

