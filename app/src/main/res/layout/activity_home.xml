<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="@color/FundoClaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/VerdeEscuro"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/imghome"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hintCiao"
            android:textColor="@color/white"
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/usuarioLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/idBtnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_login"
        android:text="Logout"
        android:textColor="@color/white"
        android:fontFamily="@font/gabrielaregular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="481dp"
        android:background="@color/VerdeEscuro"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/testehome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/homeicon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/menuicon"/>

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/personicon" />
    </LinearLayout>

</LinearLayout>