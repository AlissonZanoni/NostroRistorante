<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservaActivity"
    android:background="@color/FundoClaro"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/VerdeEscuro">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cardapioTitle"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gabrielaregular"
            android:layout_gravity="center"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/imgheader"
            android:layout_gravity="center"
            android:layout_marginStart="230dp"/>
    </LinearLayout>

    <!--Mensagem-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msgReservar"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gabrielaregular"
            android:textColor="@color/VerdeEscuro"
            android:textSize="18sp"/>
    </LinearLayout>

    <!--Body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--Data da Reserva-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de reserva"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textColor="@color/VerdeEscuro"
        android:fontFamily="@font/gabrielaregular"/>
    <EditText
        android:id="@+id/ed_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:textColorHint="@color/blackhint"
        android:textColor="@color/VerdeEscuro"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/VerdeEscuro"
        android:layout_marginRight="20dp"

        android:drawableEnd="@drawable/calendarioicon"
        android:fontFamily="@font/gabrielaregular"/>

    <!--Quantidade de pessoas-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade de pessoas"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textColor="@color/VerdeEscuro"
        android:fontFamily="@font/gabrielaregular"/>
    <EditText
        android:id="@+id/confirmarQtdPessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blackhint"
        android:textColor="@color/VerdeEscuro"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/VerdeEscuro"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:fontFamily="@font/gabrielaregular"/>

    <!--Observação-->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observação"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/VerdeEscuro"
            android:fontFamily="@font/gabrielaregular"/>
    <EditText
            android:id="@+id/observacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/blackhint"
            android:textColor="@color/VerdeEscuro"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/VerdeEscuro"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/gabrielaregular"/>

    <!--Botão-->
    <Button
            android:id="@+id/idBtnEscolherMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_button_login"
            android:text="Escolher Mesa"
            android:textColor="@color/white"
            android:fontFamily="@font/gabrielaregular"/>


    </LinearLayout>
    </LinearLayout>
</ScrollView>